<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#FFFFFF"
                android:onClick="selecionarMostrarContacto"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Iv_seleccionar_mostrar_contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/Tv_seleccionar_mostrar_contacto"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="149dp"
                    android:layout_marginLeft="149dp"
                    android:layout_marginEnd="149dp"
                    android:layout_marginRight="149dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="12dp"
                    android:background="#FFFFFF"
                    android:contentDescription="@string/seleccionar_y_mostrar_contacto"
                    app:srcCompat="@drawable/contactos" />

                <TextView
                    android:id="@+id/Tv_seleccionar_mostrar_contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="28dp"
                    android:gravity="center_horizontal"
                    android:text="@string/seleccionar_y_mostrar_contacto"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:onClick="selecionarEnviarContacto"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Iv_contactos_seleccionar_enviar_contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/Tv_seleccionar_enviar_contacto"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="12dp"
                    android:background="#FFFFFF"
                    android:contentDescription="@string/seleccionar_y_mostrar_contacto"
                    app:srcCompat="@drawable/contactos" />

                <ImageView
                    android:id="@+id/Iv_simbolo_mas"
                    android:layout_width="65dp"
                    android:layout_height="69dp"
                    android:layout_above="@+id/Tv_seleccionar_enviar_contacto"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toStartOf="@+id/Iv_mensajes_seleccionar_enviar_contacto"
                    android:layout_toLeftOf="@+id/Iv_mensajes_seleccionar_enviar_contacto"
                    android:layout_toEndOf="@+id/Iv_contactos_seleccionar_enviar_contacto"
                    android:layout_toRightOf="@+id/Iv_contactos_seleccionar_enviar_contacto"
                    android:contentDescription="@string/seleccionar_y_enviar_contacto"
                    android:src="@drawable/simbolomas" />

                <ImageView
                    android:id="@+id/Iv_mensajes_seleccionar_enviar_contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/Tv_seleccionar_enviar_contacto"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="@string/seleccionar_y_enviar_contacto"
                    android:src="@drawable/sms" />

                <TextView
                    android:id="@+id/Tv_seleccionar_enviar_contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="28dp"
                    android:gravity="center_horizontal"
                    android:text="@string/seleccionar_y_enviar_contacto"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                android:onClick="selecionarLlamarContacto">

                <ImageView
                    android:id="@+id/Iv_seleccionar_llamar_contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/Tv_seleccionar_llamar_contacto"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="149dp"
                    android:layout_marginLeft="149dp"
                    android:layout_marginEnd="149dp"
                    android:layout_marginRight="149dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="@string/seleccionar_y_llamar_contacto"
                    app:srcCompat="@drawable/telefono" />

                <TextView
                    android:id="@+id/Tv_seleccionar_llamar_contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="28dp"
                    android:text="@string/seleccionar_y_llamar_contacto"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                android:onClick="irIntentenviarMensaje">

                <ImageView
                    android:id="@+id/Iv_enviar_mensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/Tv_enviar_mensaje"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="149dp"
                    android:layout_marginLeft="149dp"
                    android:layout_marginEnd="149dp"
                    android:layout_marginRight="149dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="@string/seleccionar_y_llamar_contacto"
                    app:srcCompat="@drawable/sms" />

                <TextView
                    android:id="@+id/Tv_enviar_mensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="28dp"
                    android:text="@string/enviar_mensaje"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>